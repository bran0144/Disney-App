<html>
<!-- Adapted from the people.html UI design -->

<head>
	<title>Touring Plans Restaurants</title>
	<link href="style.css" rel="stylesheet" type="text/css" />
	<script language="JavaScript">
	
	function newTouringPlanRestaurant() {
		showform('insert');
	}

	function browseTouringPlanRestaurants() {
		showform('browse');
	}

	function showAll() {
		showform('all');
	}
	</script>
</head>

<body onload="browseTouringPlanRestaurants()">
	<h1>Touring Plan Restaurants</h1> 
	[ <a href=" {{ url_for('home')}}">Home</a> |<a href="{{ url_for('parks')}}">Parks</a> | <a href="{{ url_for('rides')}}">Rides</a> | <a href="{{ url_for('restaurants')}}">Restaurants</a>  | <a href="{{ url_for('touring_plans')}}">Touring Plans</a> ]

	<div id="browse">
		<p><a href="#" onClick="newTouringPlanRestaurant()">Add New</a> </p>
		<table border="1" cellpadding="5">
            <!-- Access data tuple passed from app.py --> 
            {% if data %}
			    <thead>
				    <tr>
					    <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}
					    
                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
					    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
					
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

				<tbody>
					<!-- Now, iterate through every item in data -->{% for item in data %}
					    <tr>
						    <!-- Then iterate through every key in the current item dictionary -->
                            {% for key in item.keys() %}

						    <!-- Create a <td> element with the value of that key in it -->
						    <td> {{item[key]}} </td> 
                            {% endfor %}

                            <!-- Create pages for M:N relationships -->

					    </tr> 
                        {% endfor %} 
                {% endif %} 
        </table>   
	<p>&nbsp;</p>
	</div>	<!-- browse -->

	<div id="insert">
		<!-- form to INSERT new data into TouringPlansRestaurants-->
		<form id="insertTouringPlanRestaurant" action="/touring_plans_restaurants" method="post">
			<legend><strong>Add Touring Plan</strong></legend>
			<fieldset>
                <!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
				<label for="planName">Plan name:</label>
				<input type="text" class="form-control" id="planName" name="planName" placeholder="" required>

				<label for="visitDate">Visit Date:</label>
                <input type="date" class="form-control" id="visitDate">

				<label for="park">park:</label>
				<select class="form-control" id="park" name="park" placeholder="" required>
				<!-- these are hard coded, but you can add code to make this dynamic -->
					<option value="0">&nbsp;</option>
					<option value="1">Magic Kingdom</option>
					<option value="2">Animal Kingdom</option>
					<option value="3">Epcot</option>
					<option value="3">Disney's Hollywood Studios</option>
					<option value="{{parks[0].parkID}}" selected></option>
				</select>

				<label for="visitorName">Visitor Name:</label>
				<input type="text" class="form-control" id="visitorName" name="visitorName" placeholder="">

                <label for="restaurantName">Restaurant Name:</label>
                <select class="form-control" id="restaurantName" name="restaurantName" placeholder=""> 
                        <!-- Access our parks tuple passed from app.py-->
                        <option value="0">&nbsp;</option>
                        {% for restaurant in restaurants %}
                            <option value="{{ restaurant['restaurantID'] }}"> {{restaurant['restaurantName']}}</option> 
                            
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </select>	
            </fieldset>

            <!-- Create 'Add Restaurant' and 'Cancel' buttons -->
			<input type="submit" value="insertTouringPlanRestaurant" name="insertTouringPlanRestaurant" class="btn btn-primary" style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browseTouringPlanRestaurants()"> 
        </form>
	</div><!--insert-->
	

</body>
</html>